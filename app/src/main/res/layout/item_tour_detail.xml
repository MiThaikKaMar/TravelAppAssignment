<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivDetailImage"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample" />

                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginBottom="80dp"
                    android:text="Thailand"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_heading_1x"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginBottom="@dimen/margin_xxlarge"
                    android:src="@drawable/ic_location_on_black_24dp" />


                <TextView
                    android:id="@+id/tvDetailLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/margin_xxlarge"
                    android:layout_marginBottom="@dimen/margin_xxlarge"
                    android:text="Location"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_regular_2x" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    android:progressTint="#fff"
                    android:rating="3.5" />

                <TextView
                    android:id="@+id/tvRatingNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="110dp"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    android:text="3.5"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginTop="@dimen/margin_medium_3"
                    android:src="@drawable/ic_arrow_back_black_24dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/margin_medium_3"
                    android:layout_marginRight="65dp"
                    android:src="@drawable/ic_share_black_24dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/margin_medium_3"
                    android:layout_marginRight="@dimen/margin_medium_3"
                    android:src="@drawable/ic_favorite_border_black_24dp" />


            </FrameLayout>

            <ImageView
                android:id="@+id/photo1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/frameLayout"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:scaleType="centerCrop"
                android:src="@drawable/photo1" />

            <ImageView
                android:id="@+id/photo12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/frameLayout"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_toRightOf="@id/photo1"
                android:scaleType="centerCrop"
                android:src="@drawable/photo2" />

            <ImageView
                android:id="@+id/photo3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/frameLayout"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_toRightOf="@id/photo12"
                android:scaleType="centerCrop"
                android:src="@drawable/photo3" />

            <ImageView
                android:id="@+id/photo4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/frameLayout"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_toRightOf="@id/photo3"
                android:scaleType="centerCrop"
                android:src="@drawable/photo4" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_below="@id/photo1"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginTop="9dp"
                android:text="Free Wi-Fi"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="45dp"
                android:layout_height="39dp"
                android:layout_below="@id/photo12"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/tv1"
                android:text="Sand Beach"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="60dp"
                android:layout_height="34dp"
                android:layout_below="@id/photo3"
                android:layout_marginLeft="@dimen/margin_xlarge"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/tv2"
                android:text="First Coastline"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="70dp"
                android:layout_height="34dp"
                android:layout_below="@id/photo4"
                android:layout_marginLeft="@dimen/margin_xlarge"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/tv3"
                android:text="Bar and Restaurant"
                android:textAlignment="center" />

            <androidx.cardview.widget.CardView
                android:id="@+id/mCVBooking"
                android:layout_width="165dp"
                android:layout_height="90dp"
                android:layout_below="@id/tv1"
                android:layout_marginLeft="@dimen/margin_xlarge"
                android:layout_marginTop="@dimen/margin_medium_3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_medium_2"
                        android:src="@drawable/booking" />

                    <TextView
                        android:id="@+id/tvBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/ivBooking"
                        android:text="Booking"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDetailRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvBooking"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_toRightOf="@id/ivBooking"
                        android:text="8.0/10"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTotalReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvDetailRating"
                        android:layout_marginLeft="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="Based on 30 Reviews" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mCVHotelOut"
                android:layout_width="165dp"
                android:layout_height="90dp"
                android:layout_below="@id/tv1"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium_3"
                android:layout_toRightOf="@id/mCVBooking">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivHotelOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_medium_2"
                        android:src="@drawable/hotelout" />

                    <TextView
                        android:id="@+id/tvHotelOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/ivHotelOut"
                        android:text="Hotel Out"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDetailRating2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvHotelOut"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_toRightOf="@id/ivHotelOut"
                        android:text="8.0/10"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTotalReview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvDetailRating2"
                        android:layout_marginLeft="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="Based on 30 Reviews" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mCVBooking"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_large"
                android:text="@string/tv_description" />

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDescription"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_xlarge">

            </ScrollView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>