<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/ivTourImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:paddingLeft="@dimen/margin_medium"
        android:src="@drawable/sample" />

    <TextView
        android:id="@+id/tvTourTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:layout_toRightOf="@id/ivTourImage"
        android:text="Thailand"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTourContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTourTitle"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_toRightOf="@id/ivTourImage"
        android:text="10nights for two/all inclusive"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tvTourCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTourContent"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_toRightOf="@id/ivTourImage"
        android:text="$245.50"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:background="#388E3C">

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_small"
            android:text="4.5"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="@dimen/text_small" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/margin_small"
            android:src="@drawable/ic_star_black_24dp" />
    </FrameLayout>


</RelativeLayout>